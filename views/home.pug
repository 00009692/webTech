extends layout.pug

block todoapp
  if error
    p.error Please fill in the form

  if success
    p.success Task Added

  if deleted
    p.success Task Deleted

  form.form(action='/add' method='POST')
    input.input(type='text' placeholder='Add your task description here...' name='todo')
    button.btn +

  div.todos
    if todos.length
      each todo in todos  
        p.todo 
          if todo.done
            a.done(href=`/${ todo.id}/update`) #{ todo.description }
          else 
            a.undone(href=`/${ todo.id}/update`) #{ todo.description }
          a.delete(href=`/${ todo.id }/delete`) âœ–
    else
      p.todo Seems you have nothing to do...
